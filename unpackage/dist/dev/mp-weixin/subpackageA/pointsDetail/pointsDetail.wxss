.pointsDetail {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.pointsDetail .header {
  padding: 36rpx 32rpx;
  box-sizing: border-box;
  background: #5995FE;
  color: #fff;
}
.pointsDetail .header .up {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}
.pointsDetail .header .up .left .text {
  font-family: PingFang SC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 28rpx;
  margin-bottom: 16rpx;
}
.pointsDetail .header .up .left .number {
  font-family: PingFang SC, PingFang SC;
  font-weight: 500;
  font-size: 36rpx;
  color: #FFFFFF;
  line-height: 42rpx;
}
.pointsDetail .header .up .right {
  font-family: PingFang SC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 28rpx;
  padding: 12rpx 24rpx;
  box-sizing: border-box;
  display: grid;
  place-content: center;
  background: #16D97D;
  border-radius: 100rpx 100rpx 100rpx 100rpx;
  height: -webkit-fit-content;
  height: fit-content;
}
.pointsDetail .header .down {
  display: flex;
  justify-content: space-between;
}
.pointsDetail .header .down .downLeft {
  font-family: PingFang SC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 28rpx;
  display: flex;
  align-items: center;
}
.pointsDetail .header .down .downLeft label {
  margin-left: 10rpx;
}
.pointsDetail .header .down .downRight {
  display: flex;
  align-items: center;
}
.pointsDetail .header .down .downRight view {
  display: flex;
  align-items: center;
  justify-content: center;
}
.pointsDetail .header .down .downRight view label:nth-last-child(2) {
  font-family: PingFang SC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 28rpx;
  margin-right: 16rpx;
}
.pointsDetail .header .down .downRight view label:nth-last-child(1) {
  font-family: PingFang SC, PingFang SC;
  font-weight: 500;
  font-size: 28rpx;
  color: #FFFFFF;
  line-height: 33rpx;
}
.pointsDetail .header .down .downRight .left {
  margin-right: 80rpx;
}
.pointsDetail .content {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* flex: 1; */
  overflow: auto;
}
.pointsDetail .content .contentHeader {
  position: relative;
  width: 100%;
  height: 116rpx;
}
.pointsDetail .content .contentHeader .lists {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.pointsDetail .content .contentHeader .lists .list {
  flex: 1;
  width: 100%;
  height: 100%;
  display: grid;
  place-content: center;
}
.pointsDetail .content .contentHeader .string {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 4rpx;
  display: flex;
  transition: all 0.3s ease;
}
.pointsDetail .content .contentHeader .string view {
  width: calc(100% / 3);
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  -webkit-transform: translateX(calc(100% * var(--width)));
          transform: translateX(calc(100% * var(--width)));
  transition: all 0.3s ease;
}
.pointsDetail .content .contentHeader .string view::after {
  content: "";
  display: flex;
  width: calc(100% / 3);
  background: #5995FE;
  height: 100%;
}
.pointsDetail .content .main {
  width: 100%;
  /* height: 100%;
			overflow: auto; */
  flex: 1;
  padding: 0 32rpx;
  padding-top: 32rpx;
  box-sizing: border-box;
}
.pointsDetail .content .main .nodata {
  display: grid;
  place-content: center;
}
.pointsDetail .content .main .nodata .content {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.pointsDetail .content .main .nodata .content image {
  width: 150px;
  height: 114px;
}
.pointsDetail .content .main .nodata .content .text {
  font-size: 20rpx;
}
.pointsDetail .content .main .list {
  padding: 32rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid #F0F0F0;
}
.pointsDetail .content .main .list .list-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}
.pointsDetail .content .main .list .list-top .list-top-left {
  font-family: PingFang SC, PingFang SC;
  font-weight: 500;
  font-size: 28rpx;
  color: #2E3033;
  line-height: 33rpx;
}
.pointsDetail .content .main .list .list-top .list-top-right {
  font-family: PingFang SC, PingFang SC;
  font-weight: 500;
  font-size: 28rpx;
  color: #FF5959;
  line-height: 33rpx;
}
.pointsDetail .content .main .list .list-bottom {
  font-family: PingFang SC, PingFang SC;
  font-weight: 400;
  font-size: 20rpx;
  color: #AFB0B2;
  line-height: 23rpx;
}
.pointsDetail .content .main .list .list-bottom label:nth-child(1) {
  margin-right: 24rpx;
}

