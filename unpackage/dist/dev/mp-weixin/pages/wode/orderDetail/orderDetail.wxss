.contianer {
  min-height: 100vh;
  background: #F6F6F6;
  padding: 32rpx;
  box-sizing: border-box;
}
.contianer .chargeView .chargeTitle {
  display: flex;
  align-items: center;
}
.contianer .chargeView .chargeTitle .blueTip {
  width: 8rpx;
  height: 32rpx;
  background: #5997FE;
  border-radius: 4rpx;
  margin-right: 8rpx;
}
.contianer .chargeView .chargeTitle .title {
  font-size: 32rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 700;
  color: #000000;
}
.contianer .chargeView .chargeDetail {
  width: 100%;
  padding: 34rpx 32rpx 48rpx 32rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  margin-top: 24rpx;
}
.contianer .chargeView .chargeDetail .itemView {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 28rpx;
}
.contianer .chargeView .chargeDetail .itemView .itemTitle {
  white-space: nowrap;
  font-size: 26rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.45);
}
.contianer .chargeView .chargeDetail .itemView .itemText {
  word-break: break-all;
  font-size: 28rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #000000;
}
.contianer .chargeView .chargeDetail .itemView:last-child {
  margin-bottom: 0;
}
.contianer .couponView {
  width: 100%;
  padding: 20rpx 32rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.contianer .couponView .leftView {
  display: flex;
  align-items: center;
}
.contianer .couponView .leftView image {
  width: 20rpx;
  height: 24rpx;
  margin-right: 12rpx;
}
.contianer .couponView .rightView {
  display: flex;
  align-items: center;
}
.contianer .couponView .rightView text {
  font-size: 26rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  color: #E93B35;
  letter-spacing: 1px;
  margin-right: 16rpx;
}
.contianer .couponView .rightView image {
  width: 12rpx;
  height: 22rpx;
}
.contianer .btnView {
  position: fixed;
  bottom: 242rpx;
  left: 0;
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.contianer .btnView .btn {
  width: 100%;
  height: 98rpx;
  background: #5997FE;
  border-radius: 52rpx;
  border: 2rpx solid #5997FE;
  font-size: 30rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 98rpx;
  letter-spacing: 1px;
  text-align: center;
}

