.share {
  overflow: auto;
  height: 100%;
  background: linear-gradient(180deg, #75C0FF 0%, #9EDBFF 15%, #309AFF 100%);
  display: flex;
  flex-direction: column;
}
.share .content {
  flex: 1;
  overflow: auto;
  padding-bottom: 16rpx;
}
.share .content .image {
  width: 100%;
  height: 780rpx;
  overflow: hidden;
  position: relative;
}
.share .content .image image {
  width: 100%;
  height: 796rpx;
}
.share .content .image .box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: grid;
  place-content: center;
}
.share .content .image .box button {
  margin-top: 198rpx;
  width: 371rpx;
  height: 90rpx;
  opacity: 0;
}
.share .content .box {
  padding: 32rpx 32rpx 0;
  box-sizing: border-box;
}
.share .content .box .name {
  font-size: 28rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}
.share .content .box .content {
  padding: 32rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, #F8FBFF 0%, #D4EBFF 100%);
  border-radius: 16rpx;
  height: 212rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.share .content .box .content .list {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.share .content .box .content .list image {
  width: 104rpx;
  height: 104rpx;
  margin-bottom: 12rpx;
}
.share .content .box .content .list .text {
  font-size: 20rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
}
.share .content .box .content .list:nth-child(2n) {
  width: 74rpx;
  height: 18rpx;
  margin-bottom: 36rpx;
}
.share .content .box .content .list:nth-child(2n) image {
  width: 100%;
  height: 100%;
  margin-bottom: 0;
}
.share .content .box .content_2 {
  padding: 32rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, #F8FBFF 0%, #D4EBFF 100%);
  border-radius: 16rpx;
  height: 212rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.share .content .box .content_2 .list {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.share .content .box .content_2 .list .name {
  font-size: 28rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #000000;
  margin-bottom: 16rpx;
}
.share .content .box .content_2 .list .number {
  font-size: 64rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  color: #329BFF;
}

