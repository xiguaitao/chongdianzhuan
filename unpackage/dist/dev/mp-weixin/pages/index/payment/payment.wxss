.container {
  width: 100vw;
  height: 100vh;
  background-color: #f6f6f6;
  padding: 0 32rpx;
  padding-top: 80rpx;
  box-sizing: border-box;
}
.container .payMoney {
  margin: 0 auto;
  text-align: center;
}
.container .payMoney text {
  font-size: 36rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 700;
  color: #000000;
}
.container .payMoney .moneyText {
  font-size: 56rpx;
}
.container .tipView {
  width: 136rpx;
  height: 42rpx;
  margin-top: 16rpx;
  background: #E8E9ED;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 42rpx;
  text-align: center;
  margin: 0 auto;
}
.container .payTypeView {
  margin-top: 80rpx;
  width: 100%;
  padding: 32rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-sizing: border-box;
}
.container .payTypeView .payTitle {
  font-size: 28rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 700;
  color: #000000;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #97979713;
}
.container .payTypeView .payType {
  margin-top: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .payTypeView .payType .leftView {
  display: flex;
  align-items: center;
}
.container .payTypeView .payType .leftView image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}
.container .payTypeView .payType .leftView text {
  font-size: 28rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #000000;
}
.container .payTypeView .payType .rightView radio {
  width: 26rpx;
  height: 26rpx;
  scale: 0.7;
}
.container .payBtn {
  padding: 0 32rpx;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 278rpx;
}
.container .payBtn .payText {
  background: #5997FE;
  border-radius: 52rpx;
  width: 100%;
  height: 104rpx;
  font-size: 28rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  letter-spacing: 1px;
  line-height: 104rpx;
  text-align: center;
}

