.closeablePopup {
  padding-bottom: 32rpx;
  box-sizing: border-box;
}
.closeablePopup > .title {
  margin: 32rpx 0;
  padding: 2rpx 0;
  box-sizing: border-box;
  text-align: center;
}
.closeablePopup .content {
  padding: 0 32rpx;
  box-sizing: border-box;
}
.closeablePopup .content .contentList {
  margin-bottom: 48rpx;
}
.closeablePopup .content .contentList .title {
  margin-bottom: 24rpx;
}
.closeablePopup .content .contentList .tags {
  display: flex;
}
.closeablePopup .content .contentList .tags .tag {
  background: #F1F3F6;
  border-radius: 999rpx;
  font-family: PingFang SC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: #2E3033;
  line-height: 28rpx;
  padding: 8rpx 24rpx;
  box-sizing: border-box;
}
.closeablePopup .content .contentList .tags .tag:not(:last-child) {
  margin-right: 24rpx;
}
.closeablePopup .content .contentList .tags .tagActive {
  color: #FFFFFF;
  background: #5995FE;
}
.closeablePopup .buttons {
  display: flex;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.closeablePopup .buttons .button {
  flex: 1;
}
.closeablePopup .buttons .button:not(:last-child) {
  margin-right: 30rpx;
}

